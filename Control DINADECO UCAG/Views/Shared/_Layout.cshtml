<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Control_DINADECO_UCAG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Control_DINADECO_UCAG.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/datatables.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                
                <a class=" logo " asp-area="" asp-controller="Home" asp-action="Index">UCAG</a>

                
                <button class="navbar-toggler shadow-none border-0 text-dark" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon dark"><i class="fa-solid fa-bars"></i></span>
                </button>

                
                <div class="sidebar offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                   
                    <div class="offcanvas-header text-white border-bottom">
                        <h5 class="offcanvas-title logo" id="offcanvasNavbarLabel">UCAG</h5>
                        <button type="button" class="btn-close btn-close-dark shadow-none" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>

                    
                    <div class="offcanvas-body d-flex flex-column p-4 flex-lg-row">
                     
                        <ul class="navbar-nav justify-content-center align-items-center fs-6 flex-grow-1 pe-3">
                       
                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="TbUsuario" asp-action="Index">Usuarios</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark fw-bold" href="#">Nosotros</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark fw-bold" href="#">Contacto</a>
                            </li>
                        </ul>

                       
                        @if (!(User.Identity?.IsAuthenticated ?? false))
                        {
                           
                            <div class="d-flex flex-column align-items-center gap-3 flex-lg-row">
                                <a class="nav-link text-dark text-decoration-none fw-bold" asp-controller="Acceso" asp-action="LogIn">Ingresar</a>
                                <a class="nav-link text-white text-decoration-none px-3 py-1 rounded-4 fw-bold"
                                   asp-controller="Acceso" asp-action="Registrarse"
                                   style="background-color: rgba(255, 120, 44, 1); font-weight: 600; border-radius: 12px;">
                                    Registrarse
                                </a>
                            </div>
                        }
                        else
                        {
                        
                            <div class="d-flex flex-column align-items-center gap-3 flex-lg-row">

                                <a href="#" class=" nav-link text-dark text-decoration-none px-3 py-1 rounded-4 fw-bold" style="background-color: rgba(255, 120, 44, 1); color: #fff; font-weight: 600; border-radius: 12px;">
                                    @User.Identity.Name
                                </a>

                               
                                <a asp-controller="Home" asp-action="Salir" class="text-dark text-decoration-none px-3 py-1 rounded-4 fw-bold" style="color: #000; font-weight: 600;">
                                    <i class="fa-solid fa-right-from-bracket"></i>
                                </a>

                                
                                @if (User.IsInRole("admin"))
                                {
                                    <a asp-controller="Admin" asp-action="Index" style="color: #000; font-weight: 600;">
                                        <i class="fa-solid fa-gears"></i>
                                    </a>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>





    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/datatables.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>