@model Control_DINADECO_UCAG.Models.TbUsuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Usuario</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Inter', sans-serif;
        }

        .details-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
            padding-top: 2rem;
            width: 90%; /* Aumenta el ancho de la tarjeta */
            max-width: 900px; /* Establece un máximo para el ancho */
        }

        .card-header {
            background-color: #f8f9fa;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            text-align: center;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .card-body {
            padding: 2rem;
        }

        .row dt {
            font-weight: bold;
            color: #34495e;
        }

        .row dd {
            color: #7f8c8d;
            font-size: 1rem;
        }

        .back-button {
            position: absolute;
            top: -20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #ffffff;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s, transform 0.3s;
        }

            .back-button svg {
                width: 20px;
                height: 20px;
                fill: #555;
                transition: fill 0.3s;
            }

            .back-button:hover {
                background-color: #e9ecef;
                transform: translateX(-50%) scale(1.1);
            }

                .back-button:hover svg {
                    fill: #333;
                }
    </style>
</head>

<body>
    <div class="details-container">
        <div class="col-md-10">
            <!-- Aquí se amplía el ancho del contenedor -->
            <div class="card">

                <!-- Botón de retroceso -->
                <a asp-controller="TbUsuario" asp-action="Index" class="back-button">
                    <svg viewBox="0 0 384 512">
                        <path d="M214.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L160 141.2V448c0 17.7 14.3 32 32 32s32-14.3 32-32V141.2L329.4 246.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-160-160z"></path>
                    </svg>
                </a>

                <!-- Encabezado de la tarjeta -->
                <div class="card-header">
                    Detalles del Usuario
                </div>

                <!-- Cuerpo de la tarjeta con la información -->
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Nombre de Usuario</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreUsuario)</dd>


                        <dt class="col-sm-3">Tipo de Usuario</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.IdRol)</dd>

                        <dt class="col-sm-3">Correo Electrónico</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>

                        <dt class="col-sm-3">Estado</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
