@model Control_DINADECO_UCAG.ViewModels.UsuarioRolesVM;

@{
    ViewData["Title"] = "Editar Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Usuario</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Inter', sans-serif;
        }

        .edit-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
            padding-top: 2rem;
            background-color: white;
        }

        .card-header {
            background-color: #f8f9fa;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            text-align: center;
            font-weight: bold;
            font-size: 1.5rem;
            padding: 10px;
            color: #333;
        }

        .card-body {
            padding: 2rem;
        }

        .form-control,
        .save-btn {
            border-radius: 10px;
            font-size: 1rem;
            height: 45px;
            padding-left: 15px;
            margin-bottom: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
            line-height: 1.5;
        }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 8px rgba(255, 127, 80, 0.6);
                border-color: #ff7f50;
            }

        select.form-control {
            height: auto;
            padding: 8px 12px;
            font-size: 1rem;
        }

        input.form-control {
            padding: 10px;
        }

        .save-btn {
            background-color: #ff7f50;
            border: none;
            color: white;
            font-weight: bold;
            width: 100%;
            transition: background-color 0.3s;
        }

            .save-btn:hover {
                background-color: #e76f3c;
            }

        .back-button {
            position: absolute;
            top: -20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #ffffff;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s, transform 0.3s;
        }

            .back-button svg {
                width: 20px;
                height: 20px;
                fill: #555;
                transition: fill 0.3s;
            }

            .back-button:hover {
                background-color: #e9ecef;
                transform: translateX(-50%) scale(1.1);
            }

                .back-button:hover svg {
                    fill: #333;
                }

        .alert-danger {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="edit-container">
        <div class="col-md-4">
            <div class="card">
               
                <a asp-controller="TbUsuario" asp-action="Index" class="back-button">
                    <svg viewBox="0 0 384 512">
                        <path d="M214.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L160 141.2V448c0 17.7 14.3 32 32 32s32-14.3 32-32V141.2L329.4 246.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-160-160z"></path>
                    </svg>
                </a>

                <div class="card-header">
                    Editar Usuario
                </div>

                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Usuario.IdUser" />

                       
                        <input type="text" class="form-control mb-3" placeholder="Nombre de usuario" asp-for="Usuario.NombreUsuario" required />
                        <div class="form-group">
                            <label asp-for="Usuario.Contraseña" class="control-label">Nueva Contraseña</label>
                            <input asp-for="Usuario.Contraseña" class="form-control" type="password" />
                            <span asp-validation-for="Usuario.Contraseña" class="text-danger"></span>
                        </div>

                        <label for="Usuario.IdRol" class="form-label">Tipo de Usuario</label>
                        <select asp-for="Usuario.Rol" class="form-control" required>
							@foreach (var rol in Model.Roles)

							{
								<option value="@rol.IdRol">@rol.Descripcion</option>
							}
						</select>

                        <input type="email" class="form-control mb-3" placeholder="Correo electrónico" asp-for="Usuario.Correo" required />
                        <select asp-for="Usuario.Estado" class="form-control">
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>

                       
                        <div class="d-grid gap-2">
                            <button class="btn save-btn" type="submit">Guardar Cambios</button>
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
